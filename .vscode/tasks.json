{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PHP Lint",
            "type": "shell",
            "command": "php -l ${file}",
            "group": "build",
            "problemMatcher": "$php",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Composer Install",
            "type": "shell",
            "command": "composer install",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}